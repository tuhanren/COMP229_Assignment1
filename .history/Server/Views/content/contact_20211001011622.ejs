<div class="bg-dark my-5 p-5" id="contact">
    <div class="contact-section">
      <h1><strong><%= title %> me</strong></h1>
      <hr style="height:2px; width:100%; border-width:0; color:white; background-color:red">
        <div>
            <div>
                <div class="mt-3">
                    <div class="mt-2"><i class="fas fa-phone-square fa-lg"></i>+1 416-837-9856</div>
                    <div class="mt-2"><i class="fas fa-envelope-square fa-lg"></i> tu.hanren@gmail.com</div>
                </div>
                <div class="mt-3">
                    <form action="https://formspree.io/f/mleavenz" method="POST">
                        <div class="form-outline mb-4">
                            <label class="form-label" for="name">Name</label>
                            <input name="name" type="text" id="name" class="form-control"  placeholder="your name" required/>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="email">Email address</label>
                            <input name="email" type="email" id="email" class="form-control" placeholder="example@email.com" required/>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label" for="message">Message</label>
                            <textarea name="message" class="form-control" id="message" rows="4"  placeholder="Hello! Hola! 你好呀！" required></textarea>    
                        </div>
                        <div class="row">
                        <button class="btn btn-secondary btn-light" type="submit" value="send"><strong>Send</strong></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>